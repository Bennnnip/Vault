{
  "ollama": {
    "enabled": true,
    "base_url": "http://localhost:11434",
    "model": "llama3:latest",
    "timeout": 30
  },
  "apple_notes": {
    "sync_enabled": true,
    "default_folder": "CLI Notes",
    "shortnote_folder": "ShortNote"
  },
  "data": {
    "directory": "data",
    "backup_directory": "backups",
    "auto_backup": true,
    "backup_interval_hours": 24
  },
  "ui": {
    "colors": true,
    "prompt": "$",
    "auto_save": true,
    "page_size": 10
  },
  "notes": {
    "default_editor": "nano",
    "markdown_preview": true,
    "auto_link": true,
    "encryption_enabled": false,
    "archive_after_days": 365
  },
  "performance": {
    "lazy_loading": true,
    "search_index": true,
    "cache_size": 1000
  }
}